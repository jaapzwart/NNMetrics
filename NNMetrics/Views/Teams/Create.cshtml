@model NNMetrics.Models.Teams

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<link rel="stylesheet" href="~/css/ProjectPredictionBasic.css" />
<h4>Teams for user - @ViewBag.userName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userName" class="control-label"></label>
                <input asp-for="userName" class="form-control" value=@ViewBag.userName readonly />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="teamName" class="control-label"></label>
                <input asp-for="teamName" class="form-control" />
                <span asp-validation-for="teamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create"  class="button28 button28" />
            </div>
        </form>
    </div>
</div>

<div>
    <button class="button21 button21" style="float: left;width:180px;" onclick="location.href='@Url.Action("Index", "Teams")';return false;"><font style="font-weight:bold;font-size:12px;">Back to list</font></button>
    <br />
</div>

